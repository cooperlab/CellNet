name: "CellNet"

# Train data layer
layer {
  name: "train_data"
  type: "HDF5Data"
  top: "data"
  top: "labels"
  include {
    phase: TRAIN
  }
  hdf5_data_param {
    source: "/home/nelson/CellNet/train/data_hdf5/lap5d_train_data_list.txt"
    batch_size: 10
  }
}

# Test data layer
layer {
  name: "valid_data"
  type: "HDF5Data"
  top: "data"
  top: "labels"
  include {
    phase: TEST
  }
  hdf5_data_param {
    source: "/home/nelson/CellNet/valid/data_hdf5/lap5d_valid_data_list.txt"
    batch_size: 10
  }
}

# Convolution Layer - C1
layer {
  name: "conv1"
  type: "Convolution"
  bottom: "data"
  top: "conv1"
  param {
    lr_mult: 1
  }
  param {
    lr_mult: 2
  }
  convolution_param {
    num_output: 20
    axis: 1
    kernel_size: 1
    kernel_size: 5
    kernel_size: 5
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}


# Pooling Layer - P1
layer {
  name: "pool1"
  type: "Pooling"
  bottom: "conv1"
  top: "pool1"
  pooling_param {
    pool: MAX
    axis: 1
    kernel_size: 2
    kernel_size: 2
    stride: 2
    stride: 2
  }
}

# Non-linear function
layer {
  name: "act1"
  bottom: "pool1"
  top: "act1"
  type: "TanH"
}

# Convolution Layer - C2
layer {
  name: "conv2"
  type: "Convolution"
  bottom: "act1"
  top: "conv2"
  param {
    lr_mult: 1
  }
  param {
    lr_mult: 2
  }
  convolution_param {
    num_output: 50
    axis: 1
    kernel_size: 5
    kernel_size: 5
    stride: 1
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}

# Pooling Layer - P2
layer {
  name: "pool2"
  type: "Pooling"
  bottom: "conv2"
  top: "pool2"
  pooling_param {
    pool: MAX
    axis: 1
    kernel_size: 2
    kernel_size: 2
    stride: 2
    stride: 2
  }
}

# Non-linear function
layer {
  name: "act2"
  bottom: "pool2"
  top: "act2"
  type: "TanH"
}

# Fully Connected Layer - FC1
layer {
  name: "ip1"
  type: "InnerProduct"
  bottom: "act2"
  top: "ip1"
  param {
    lr_mult: 1
  }
  param {
    lr_mult: 2
  }
  inner_product_param {
    num_output: 500
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}

# Non-linear function
layer {
  name: "act3"
  bottom: "ip1"
  top: "act3"
  type: "TanH"
}

# Fully Connected Layer - FC2
layer {
  name: "ip2"
  type: "InnerProduct"
  bottom: "act3"
  top: "ip2"
  param {
    lr_mult: 1
  }
  param {
    lr_mult: 2
  }
  inner_product_param {
    num_output: 2
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
    }
  }
}

# Accuracy
layer {
  name: "accuracy"
  type: "Accuracy"
  bottom: "ip2"
  bottom: "labels"
  top: "accuracy"
  include {
    phase: TEST
  }
}

# Loss
layer {
  name: "loss"
  type: "SoftmaxWithLoss"
  bottom: "ip2"
  bottom: "labels"
  top: "loss"
}
